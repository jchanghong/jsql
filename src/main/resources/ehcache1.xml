<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">

   <!-- <cache alias="my1">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.String</value-type>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">500</offheap>
        </resources>
    </cache>-->

    <cache-template name="myDefaults">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.String</value-type>
        <heap unit="entries">20</heap>
    </cache-template>

    <cache alias="db" uses-template="myDefaults">
        <heap unit="entries">100</heap>
    </cache>
    <cache alias="select" uses-template="myDefaults">
        <value-type>io.jsql.sql.handler.MyResultSet</value-type>
        <heap unit="entries">1000</heap>
    </cache>
    <cache alias="showdb" uses-template="myDefaults">
        <value-type>io.jsql.sql.handler.MyResultSet</value-type>
        <heap unit="entries">1000</heap>
    </cache>
    <cache alias="table" uses-template="myDefaults">
        <heap unit="entries">100</heap>
    </cache>
    <cache alias="simpleCache" uses-template="myDefaults" />

</config>